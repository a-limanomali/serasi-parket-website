---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Kontak Serasi Parket - Hubungi Supplier Kayu Premium Indonesia" 
  description="Hubungi Serasi Parket untuk konsultasi gratis kebutuhan kayu premium Anda. Tim ahli kami siap membantu dari pemilihan produk hingga after-sales support."
  keywords="kontak serasi parket, alamat serasi parket, telepon serasi parket, konsultasi kayu premium, supplier kayu Jakarta"
>
  <Header />
  
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-primary-600">Beranda</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Kontak</li>
      </ol>
    </div>
  </nav>

  <!-- Header -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">
        Hubungi Kami
      </h1>
      <p class="text-xl max-w-3xl mx-auto">
        Tim ahli kami siap membantu Anda menemukan solusi kayu premium yang tepat. Konsultasi gratis untuk semua kebutuhan proyek Anda.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <div>
            <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
              Informasi Kontak
            </h2>
            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Alamat Kantor</h3>
                  <p class="text-gray-600">
                    Jl. Industri Kayu No. 123<br>
                    Kelurahan Kebon Jeruk<br>
                    Jakarta Barat 10120<br>
                    Indonesia
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Telepon</h3>
                  <p class="text-gray-600">
                    <a href="tel:+622112345678" class="hover:text-primary-600 transition-colors duration-300">
                      +62 21 1234 5678
                    </a>
                  </p>
                  <p class="text-gray-600">
                    <a href="tel:+6281234567890" class="hover:text-primary-600 transition-colors duration-300">
                      +62 812 3456 7890 (Mobile)
                    </a>
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                  <p class="text-gray-600">
                    <a href="mailto:info@serasi-parket.com" class="hover:text-primary-600 transition-colors duration-300">
                      info@serasi-parket.com
                    </a>
                  </p>
                  <p class="text-gray-600">
                    <a href="mailto:sales@serasi-parket.com" class="hover:text-primary-600 transition-colors duration-300">
                      sales@serasi-parket.com
                    </a>
                  </p>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.905 3.686z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">WhatsApp</h3>
                  <p class="text-gray-600">
                    <a 
                      href="https://wa.me/6281234567890?text=Halo%20Serasi%20Parket,%20saya%20ingin%20konsultasi%20mengenai%20produk%20kayu%20premium" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-green-600 transition-colors duration-300"
                    >
                      +62 812 3456 7890
                    </a>
                  </p>
                  <p class="text-sm text-gray-500">Chat langsung dengan tim kami</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div>
            <h3 class="font-display text-xl font-semibold text-gray-900 mb-4">
              Jam Operasional
            </h3>
            <div class="space-y-2 text-gray-600">
              <div class="flex justify-between">
                <span>Senin - Jumat</span>
                <span>08:00 - 17:00 WIB</span>
              </div>
              <div class="flex justify-between">
                <span>Sabtu</span>
                <span>08:00 - 15:00 WIB</span>
              </div>
              <div class="flex justify-between">
                <span>Minggu</span>
                <span class="text-red-500">Tutup</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-gray-50 rounded-lg p-8">
            <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
              Kirim Pesan Anda
            </h2>
            
            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Nama Lengkap *
                  </label>
                  <input 
                    type="text" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="Masukkan nama lengkap Anda"
                  />
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="nama@email.com"
                  />
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Nomor Telepon
                  </label>
                  <input 
                    type="tel" 
                    name="phone" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    placeholder="+62 xxx xxxx xxxx"
                  />
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Jenis Kebutuhan
                  </label>
                  <select 
                    name="inquiry_type" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  >
                    <option value="">Pilih jenis kebutuhan</option>
                    <option value="flooring">Flooring / Parquet</option>
                    <option value="furniture">Furniture</option>
                    <option value="construction">Konstruksi</option>
                    <option value="marine">Marine / Outdoor</option>
                    <option value="custom">Custom Project</option>
                    <option value="consultation">Konsultasi Umum</option>
                    <option value="partnership">Kemitraan</option>
                    <option value="other">Lainnya</option>
                  </select>
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Jenis Kayu yang Diminati
                </label>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="jati" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Jati</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="ulin" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Ulin</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="merbau" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Merbau</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="meranti" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Meranti</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="kamper" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Kamper</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="bengkirai" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Bengkirai</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="sonokling" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Sonokling</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" name="wood_types" value="mahoni" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    <span class="ml-2 text-sm text-gray-700">Mahoni</span>
                  </label>
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Pesan / Deskripsi Kebutuhan *
                </label>
                <textarea 
                  name="message" 
                  rows="5" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="Jelaskan kebutuhan Anda secara detail: aplikasi, dimensi, quantity, timeline, budget range, dll. Semakin detail informasi yang Anda berikan, semakin tepat solusi yang dapat kami tawarkan."
                ></textarea>
              </div>
              
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  name="newsletter" 
                  id="newsletter" 
                  class="rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                />
                <label for="newsletter" class="ml-2 text-sm text-gray-700">
                  Saya ingin menerima newsletter dan update produk terbaru dari Serasi Parket
                </label>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-300 flex items-center justify-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                Kirim Pesan
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-0">
    <div class="w-full h-96 bg-gray-200 relative">
      <!-- Google Maps Embed -->
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.6664739267593!2d106.77867331533477!3d-6.174465261941853!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f19f5f19e0eb%3A0x4e1c4b3c4b3c4b3c!2sJl.%20Industri%20Kayu%2C%20Kebon%20Jeruk%2C%20Jakarta%20Barat!5e0!3m2!1sen!2sid!4v1635123456789!5m2!1sen!2sid"
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        title="Lokasi Serasi Parket"
      ></iframe>
      
      <!-- Map Overlay Info -->
      <div class="absolute top-4 left-4 bg-white rounded-lg shadow-lg p-4 max-w-xs">
        <h3 class="font-semibold text-gray-900 mb-2">Serasi Parket</h3>
        <p class="text-sm text-gray-600">
          Jl. Industri Kayu No. 123<br>
          Jakarta Barat 10120
        </p>
        <a 
          href="https://maps.google.com/?q=Jl.+Industri+Kayu+No.+123+Jakarta+Barat" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-primary-600 text-sm mt-2 hover:text-primary-700"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Buka di Google Maps
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Pertanyaan yang Sering Diajukan
        </h2>
        <p class="text-xl text-gray-600">
          Temukan jawaban atas pertanyaan umum seputar produk dan layanan kami.
        </p>
      </div>
      
      <div class="space-y-4">
        <div class="bg-white rounded-lg shadow-sm">
          <button 
            class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none"
            onclick="toggleFAQ(this)"
          >
            <span class="font-semibold text-gray-900">Bagaimana cara memilih jenis kayu yang tepat untuk proyek saya?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 hidden">
            <p class="text-gray-600">
              Pemilihan kayu tergantung pada aplikasi, budget, dan kondisi lingkungan. Tim ahli kami akan membantu Anda memilih berdasarkan kebutuhan spesifik: untuk outdoor gunakan Ulin atau Bengkirai, untuk furniture premium pilih Jati atau Sonokling, untuk flooring indoor Merbau atau Meranti bisa menjadi pilihan tepat.
            </p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm">
          <button 
            class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none"
            onclick="toggleFAQ(this)"
          >
            <span class="font-semibold text-gray-900">Berapa lama waktu pengiriman untuk pesanan kayu?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 hidden">
            <p class="text-gray-600">
              Waktu pengiriman bervariasi tergantung jenis kayu, quantity, dan lokasi. Untuk stok ready: 3-7 hari kerja. Untuk pesanan custom atau quantity besar: 2-4 minggu. Kami akan memberikan estimasi waktu yang akurat setelah menerima detail pesanan Anda.
            </p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm">
          <button 
            class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none"
            onclick="toggleFAQ(this)"
          >
            <span class="font-semibold text-gray-900">Apakah Serasi Parket menyediakan layanan instalasi?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 hidden">
            <p class="text-gray-600">
              Ya, kami memiliki jaringan partner installer berpengalaman di berbagai kota. Kami juga menyediakan guidance teknis dan training untuk tim installer Anda. Hubungi tim kami untuk informasi lebih detail mengenai layanan instalasi di area Anda.
            </p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm">
          <button 
            class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none"
            onclick="toggleFAQ(this)"
          >
            <span class="font-semibold text-gray-900">Bagaimana sistem pembayaran yang tersedia?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 hidden">
            <p class="text-gray-600">
              Kami menerima pembayaran melalui transfer bank, cash, dan untuk pelanggan corporate tersedia sistem kredit dengan terms yang fleksibel. DP minimal 30% untuk memulai produksi, pelunasan sebelum pengiriman. Diskusikan kebutuhan payment terms Anda dengan tim sales kami.
            </p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm">
          <button 
            class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none"
            onclick="toggleFAQ(this)"
          >
            <span class="font-semibold text-gray-900">Apakah ada garansi untuk produk kayu yang dibeli?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="px-6 pb-4 hidden">
            <p class="text-gray-600">
              Ya, kami memberikan garansi kualitas produk sesuai spesifikasi yang disepakati. Garansi meliputi cacat produksi, dimensi tidak sesuai, dan kualitas grade. Periode garansi bervariasi per produk. Kami juga menyediakan after-sales support untuk maintenance tips dan troubleshooting.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />

  <script>
    // Contact form submission
    document.getElementById('contact-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const name = formData.get('name');
      const email = formData.get('email');
      const phone = formData.get('phone');
      const inquiryType = formData.get('inquiry_type');
      const message = formData.get('message');
      
      // Get selected wood types
      const woodTypes = [];
      formData.getAll('wood_types').forEach(type => woodTypes.push(type));
      
      // Track form submission
      gtag('event', 'generate_lead', {
        'currency': 'IDR',
        'value': 0,
        'method': 'contact_form',
        'inquiry_type': inquiryType,
        'wood_types': woodTypes.join(',')
      });
      
      // Simulate form submission success
      alert(`Terima kasih ${name}! Pesan Anda telah terkirim. Tim kami akan menghubungi Anda dalam 24 jam ke depan.`);
      
      // Reset form
      this.reset();
    });

    // FAQ toggle functionality
    function toggleFAQ(button) {
      const content = button.nextElementSibling;
      const icon = button.querySelector('svg');
      
      if (content.classList.contains('hidden')) {
        // Close all other FAQs
        document.querySelectorAll('.bg-white .hidden').forEach(el => {
          if (el !== content) {
            el.classList.add('hidden');
            el.previousElementSibling.querySelector('svg').classList.remove('rotate-180');
          }
        });
        
        // Open this FAQ
        content.classList.remove('hidden');
        icon.classList.add('rotate-180');
      } else {
        // Close this FAQ
        content.classList.add('hidden');
        icon.classList.remove('rotate-180');
      }
    }

    // Make toggleFAQ function globally available
    window.toggleFAQ = toggleFAQ;
  </script>
</Layout>
