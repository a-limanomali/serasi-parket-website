---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout
  title="Blog - Serasi Parket"
  description="Artikel, tips, dan wawasan terbaru dari industri perkayuan oleh tim Serasi Parket."
  keywords="blog, artikel, tips kayu, industri kayu, serasi parket"
>
  <Header />

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-primary-600">Beranda</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Blog</li>
      </ol>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">
        Wawasan dari Dunia Kayu
      </h1>
      <p class="text-xl max-w-3xl mx-auto">
        Jelajahi artikel, panduan, dan berita terbaru dari para ahli di Serasi Parket.
      </p>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <a href={`/blog/${post.slug}/`} class="group block bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            {post.data.image && (
              <div class="relative overflow-hidden">
                <Image
                  src={post.data.image}
                  alt={post.data.title}
                  width={400}
                  height={250}
                  class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
                />
              </div>
            )}
            <div class="p-6">
              <p class="text-sm text-gray-500 mb-2">
                {new Date(post.data.publishDate).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
              </p>
              <h3 class="font-display text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors duration-300">{post.data.title}</h3>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{post.data.description}</p>
              <div class="flex items-center text-sm font-medium text-primary-600">
                Baca Selengkapnya
                <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>
